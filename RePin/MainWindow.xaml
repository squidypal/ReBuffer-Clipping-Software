<Window x:Class="ReBuffer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ReBuffer" 
        Height="580" 
        Width="680"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#0D0D0D"
        FontFamily="Segoe UI">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" 
                                                BlurRadius="12" 
                                                ShadowDepth="2" 
                                                Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#252525"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Green Action Button -->
        <Style x:Key="GreenButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#39c20f"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#49f215"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Secondary Button -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#1F1F1F"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Main Container with Padding -->
        <Grid Margin="30,25,30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with Logo -->
            <Grid Grid.Row="0" Margin="0,0,0,25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="ReBuffer" 
                               FontSize="28" 
                               FontWeight="SemiBold" 
                               Foreground="#FFFFFF"
                               Margin="0,0,0,2"/>
                    <TextBlock Text="Screen clipping made simple" 
                               FontSize="13" 
                               Foreground="#707070"
                               FontWeight="Normal"/>
                </StackPanel>
            </Grid>

            <!-- Status Card -->
            <Border Grid.Row="1" 
                    Background="#161616" 
                    CornerRadius="12" 
                    Padding="24,20"
                    Margin="0,0,0,20">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                    BlurRadius="15" 
                                    ShadowDepth="3" 
                                    Opacity="0.4"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Indicator -->
                    <Border Grid.Column="0" 
                            Width="12" 
                            Height="12" 
                            CornerRadius="6"
                            Margin="0,0,16,0"
                            VerticalAlignment="Center">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#39c20f"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=StatusText, Path=Text}" Value="Recording Paused">
                                        <Setter Property="Background" Value="#707070"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <!-- Status Info -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock x:Name="StatusText" 
                                   Text="Recording Active" 
                                   FontSize="17" 
                                   FontWeight="SemiBold"
                                   Foreground="#FFFFFF"/>
                        <TextBlock x:Name="InfoText" 
                                   Text="Buffer: 30 seconds @ 60 FPS" 
                                   FontSize="13" 
                                   Foreground="#808080"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Hotkey Badge -->
                    <Border Grid.Column="2" 
                            Background="#1F1F1F" 
                            CornerRadius="8"
                            Padding="16,12"
                            VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock x:Name="HotKeyText"
                                       Text="F8" 
                                       FontSize="22" 
                                       FontWeight="Bold"
                                       Foreground="#39c20f"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,2"/>
                            <TextBlock Text="Save Clip" 
                                       FontSize="11" 
                                       Foreground="#707070"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Activity Log -->
            <Border Grid.Row="2" 
                    Background="#161616" 
                    CornerRadius="12" 
                    Padding="0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" 
                                    BlurRadius="15" 
                                    ShadowDepth="3" 
                                    Opacity="0.4"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Log Header -->
                    <Border Grid.Row="0" 
                            Background="#1A1A1A"
                            CornerRadius="12,12,0,0"
                            Padding="18,14">
                        <TextBlock Text="Activity Log" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#B0B0B0"/>
                    </Border>
                    
                    <!-- Log Content -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  Padding="18,12,18,18">
                        <TextBlock x:Name="LogText" 
                                   FontFamily="Cascadia Code, Consolas, Courier New" 
                                   FontSize="12" 
                                   Foreground="#909090"
                                   LineHeight="20"
                                   TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Control Buttons -->
            <Grid Grid.Row="3" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Primary Action Button -->
                <Button x:Name="StartStopButton"
                        Grid.Column="0"
                        Content="â¸  Pause Recording"
                        Height="44"
                        FontSize="14"
                        Padding="18,0"
                        Style="{StaticResource GreenButton}"
                        Click="StartStopButton_Click"
                        Margin="0,0,10,0"/>

                <!-- Settings Button -->
                <Button Grid.Column="1"
                        Content="âš™"
                        Width="44"
                        Height="44"
                        FontSize="18"
                        Style="{StaticResource SecondaryButton}"
                        Click="Settings_Click"
                        Margin="0,0,10,0"
                        ToolTip="Settings"/>

                <!-- Open Folder Button -->
                <Button Grid.Column="2"
                        Content="ðŸ“"
                        Width="44"
                        Height="44"
                        FontSize="18"
                        Style="{StaticResource SecondaryButton}"
                        Click="OpenFolder_Click"
                        ToolTip="Open Clips Folder"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
